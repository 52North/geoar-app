<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingBottom="25dip"
	android:paddingLeft="20dip"
	android:minWidth="200dip"
	android:id="@+id/bubble_main_layout"
	android:background="@drawable/map_bubble_overlay"
	android:paddingTop="10dip"
	android:paddingRight="10dip">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_weight="1"
		android:layout_marginTop="6dip"
		android:minHeight="40dip"
		android:gravity="center_vertical"
		android:id="@id/bubble_inner_layout">

		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/bubble_item_title"
			android:text="bubble_item_title"
			android:textSize="16dip"
			android:textColor="@android:color/primary_text_light"/>
 
		<TextView android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/bubble_item_snippet"
			android:text="bubble_item_snippet"
			android:textSize="12dip"
			android:textColor="@android:color/secondary_text_light"/>

	</LinearLayout>

	<ImageView android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/map_bubble_close"
		android:id="@id/bubble_close"
		android:paddingLeft="10dip"
		android:paddingBottom="10dip"
		android:paddingRight="5dip"
		android:paddingTop="5dip"/>

</LinearLayout>