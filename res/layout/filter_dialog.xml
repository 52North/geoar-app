<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content">

	<LinearLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:orientation="vertical">
		<TextView android:layout_height="wrap_content"
			style="?android:attr/listSeparatorTextViewStyle"
			android:text="@string/dateFrom" android:layout_width="match_parent"></TextView>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="match_parent">
			<TextView android:layout_height="wrap_content" android:text=""
				android:layout_width="wrap_content" android:layout_weight="1"
				android:inputType="date" android:id="@+id/textViewStartdate"
				android:layout_gravity="center_vertical" />
			<Button android:id="@+id/buttonStartdate"
				android:layout_height="wrap_content" android:text="@string/select"
				android:layout_gravity="center_vertical" android:layout_width="wrap_content"></Button>
			<Button android:text="@string/delete" android:id="@+id/buttonDeleteStartdate"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		</LinearLayout>
		<TextView android:text="@string/dateTo" android:layout_height="wrap_content" style="?android:attr/listSeparatorTextViewStyle" android:layout_width="match_parent"></TextView>
		<LinearLayout android:layout_height="wrap_content"
			android:layout_width="match_parent">

			<TextView android:inputType="date" android:layout_width="wrap_content"
				android:layout_weight="1" android:layout_height="wrap_content"
				android:id="@+id/textViewEnddate" android:layout_gravity="center_vertical" />
			<Button android:id="@+id/buttonEnddate" android:layout_height="wrap_content"
				android:text="@string/select" android:layout_gravity="center_vertical"
				android:layout_width="wrap_content"></Button>
			<Button android:text="@string/delete" android:id="@+id/buttonDeleteEnddate"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
		</LinearLayout>

		<!-- Tageszeit -->
		<TextView android:id="@+id/textView1"
			android:text="@string/time_of_day" style="?android:attr/listSeparatorTextViewStyle"
			android:layout_height="wrap_content" android:layout_width="match_parent"></TextView>
		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
			<Spinner android:id="@+id/spinnerHourFrom"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>
			<TextView android:layout_width="wrap_content"
				android:layout_gravity="center_vertical" android:text=" bis "
				android:layout_height="wrap_content"></TextView>
			<Spinner android:id="@+id/spinnerHourTo"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></Spinner>
		</LinearLayout>
	</LinearLayout>
</ScrollView>