<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="formView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="formGroup">

        <!-- one cannot subclass android:attr/listSeparatorTextViewStyle :( -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <!-- copied from api 16 resources, since it's not public -->
        <item name="android:background">@drawable/list_section_divider_holo_dark</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="formLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="GeoAR" />

    <style name="GeoAR.BorderlessButton" />

    <style name="GeoAR.DropDownItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="GeoAR.Theme" parent="Theme.Sherlock">
        <item name="borderlessButtonStyle">@style/GeoAR.BorderlessButton</item>
        <item name="dropDownItemStyle">@style/GeoAR.DropDownItem</item>
    </style>

    <style name="GeoAR.Theme.Dialog" parent="Theme.Sherlock.Dialog">
        <item name="borderlessButtonStyle">@style/GeoAR.BorderlessButton</item>
        <item name="dropDownItemStyle">@style/GeoAR.DropDownItem</item>
    </style>

    <style name="intro_base">
        <item name="android:paddingBottom">50dp</item>
		<item name="android:padding">10dp</item>
    </style>

    <style name="intro_title">
        <item name="android:textColor">#ff33b5e5</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/intro_title_background</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="intro_body">
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="intro_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/intro_background</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
    </style>

</resources>